<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Marathon"
             x:Class="Marathon.MainPage">
    

    <StackLayout Padding="20,20">
        <Label Text="Race Results" FontSize="Large" FontAttributes="Bold" FontFamily="Palatino"/>
        <ListView x:Name="lstResults" />
        <Picker x:Name="RacePicker" ItemDisplayBinding="{Binding race_name}" 
                Title="Please Pick a Race" FontSize="Medium" 
                HorizontalTextAlignment="Center" BackgroundColor="Silver" 
                SelectedIndexChanged="RacePicker_OnSelectedIndexChanged"/>
    </StackLayout>
    
</ContentPage>
